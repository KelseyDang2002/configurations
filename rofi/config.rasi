// @theme "/usr/share/rofi/themes/DarkBlue.rasi"
@theme "/dev/null"

* {
  font: "JetBrainsMono Nerd Font Mono Bold 12";

  bg0     : #1a1b26;
  bg1     : #1f2335;
  bg2     : #24283bb3;
  bg3     : #414868;
  fg0     : #c0caf5;
  fg1     : #a9b1d6;
  fg2     : #737aa2;
  red     : #f7768e;
  green   : #9ece6a;
  yellow  : #e0af68;
  blue    : #7aa2f7;
  magenta : #9a7ecc;
  cyan    : #4abaaf;

  accent: @red;
  urgent: @yellow;

  background-color : transparent;
  text-color       : @fg0;

  margin  : 0px;
  padding : 0px;
  spacing : 0px;
}

element-icon, element-text, scrollbar {
  cursor: pointer;
}

window {
  location : center;
  width    : 600px;
  x-offset : 0px;
  y-offset : 0px;

  background-color: @bg2;
  border: 2px;
  border-color: @fg2;
  border-radius: 8px;
}

inputbar {
  spacing  : 8px;
  padding  : 12px 12px;
  children : [ icon-search, entry ];

  // background-color: @bg2;
}

icon-search, entry, element-icon, element-text {
  vertical-align: 0.5;
}

icon-search {
  expand   : false;
  filename : "search-symbolic";
  size     : 24px;
}

textbox {
  padding          : 12px 12px;
  background-color : @bg2;
}

listview {
  padding      : 4px 0px;
  lines        : 6;
  columns      : 1;
  scrollbar    : true;
  fixed-height : true;
  dynamic      : true;
}

element {
  padding : 12px 12px;
  spacing : 8px;
}

element normal urgent {
  text-color: @urgent;
}

element normal active {
  text-color: @accent;
}

element alternate active {
  text-color: @accent;
}

element selected {
  text-color       : @bg2;
  background-color : @accent;
}

element selected urgent {
  background-color: @urgent;
}

element-icon {
  size: 1em;
  padding: 0px 12px;
}

element-text {
  text-color: inherit;
}

scrollbar {
  handle-width : 2px;
  handle-color : @fg2;
  padding      : 2px 4px;
}
